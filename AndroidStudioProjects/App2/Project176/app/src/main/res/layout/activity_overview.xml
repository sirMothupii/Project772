<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mothupii_.project176.Overview">

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5d6d7e"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:tabMode="scrollable"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintHorizontal_bias="0.0">

        <android.support.design.widget.TabItem
            android:id="@+id/tabItemHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/home_icon"
            android:onClick="onClickHome"
            android:text="Home"
            tools:ignore="HardcodedText" />

        <android.support.design.widget.TabItem
            android:id="@+id/tabItemSocial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/chat_icon"
            android:onClick="onClickSocial"
            android:text="SocialMedia"
            tools:ignore="HardcodedText" />

        <android.support.design.widget.TabItem
            android:id="@+id/tabItemUber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/uber"
            android:onClick="onClickUber"
            android:text="Request Uber"
            tools:ignore="HardcodedText" />

        <android.support.design.widget.TabItem
            android:id="@+id/tabItemMaps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@android:drawable/ic_dialog_map"
            android:onClick="onClickMaps"
            android:text="Google Maps"
            tools:ignore="HardcodedText" />
    </android.support.design.widget.TabLayout>

</android.support.constraint.ConstraintLayout>
